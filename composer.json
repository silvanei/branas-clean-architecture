{
    "name": "silvanei/branas-clean-architecture",
    "description": "Projeto desenvolvido durante curso de clean code e clean architecture do Rodrigo Branas",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Silvanei\\BranasCleanArchitecture\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Silvanei Santos",
            "email": "ads.silvanei@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-ds": "*"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.2",
        "squizlabs/php_codesniffer": "^3.6",
        "pestphp/pest-plugin-mock": "^1.0",
        "pestphp/pest-plugin-faker": "^1.0",
        "phpstan/phpstan-mockery": "^1.0"
    },
    "scripts": {
        "check": [
            "@phpstan",
            "@phpcs",
            "@test"
        ],
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse",
        "test": "pest",
        "test-coverage": "XDEBUG_MODE=coverage pest --coverage --coverage-html coverage/"
    }
}
